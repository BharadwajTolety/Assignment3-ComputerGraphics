<scene>
    <instance name="sphere" path="models/sphere"></instance>
    <instance name="box" path="models/box"></instance>
    <instance name="cylinder" path="models/cylinder"></instance>
    <instance name="cone" path="models/cone"></instance>
    <transform>
    	<set>
            <translate>0 0 0</translate>
            <scale>0.1 0.1 0.1</scale>
        </set>
        <group name="drone">
        	<transform>
        		<set>
        			<scale>10 10 10</scale>
        		</set>
        		<group name="body">
        			<object instanceof="sphere">
        				<material>
        					<color>1 1 1</color>
        				</material>
        			</object>
        		</group>
        	</transform>
        	<group name="x-axis-line">
        		<transform>
        			<set>
        				<translate>25 0 0</translate>
        				<rotate>90 0 0 1</rotate>
        				<scale>2.5 15 2.5</scale>
        			</set>
        			<object instanceof="cylinder">
        				<material>
        					<color>0.3 0.9 1</color>
        				</material>
        			</object>
        		</transform>
        	</group>
        	<group name="x-axis-pointer">
        		<transform>
        			<set>
        				<translate>25 0 0</translate>
        				<rotate>-90 0 0 1</rotate>
        				<scale>3.5 10 3.5</scale>
        			</set>
        			<object instanceof="cone">
        				<material>
        					<color>0.3 0.9 1</color>
        				</material>
        			</object>
        		</transform>
        	</group>
        	<group name="y-axis-line">
        		<transform>
        			<set>
        				<translate>0 10 0</translate>
        				<scale>2.5 15 2.5</scale>
        			</set>
        			<object instanceof="cylinder">
        				<material>
        					<color>0.8 0.2 0.3</color>
        				</material>
        			</object>
        		</transform>
        	</group>
        	<group name="y-axis-pointer">
        		<transform>
        			<set>
        				<translate>0 25 0</translate>
        				<scale>3.5 10 3.5</scale>
        			</set>
        			<object instanceof="cone">
        				<material>
        					<color>0.8 0.2 0.3</color>
        				</material>
        			</object>
        		</transform>
        	</group>
        	<group name="z-axis-line">
        		<transform>
        			<set>
        				<translate>0 0 -25</translate>
        				<rotate>90 1 0 0</rotate>
        				<scale>2.5 15 2.5</scale>
        			</set>
        			<object instanceof="cylinder">
        				<material>
        					<color>1 0.9 0.4</color>
        				</material>
        			</object>
        		</transform>
        	</group>
        	<group name="z-axis-pointer">
        		<transform>
        			<set>
        				<translate>0 0 -25</translate>
        				<rotate>-90 1 0 0</rotate>
        				<scale>3.5 10 3.5</scale>
        			</set>
        			<object instanceof="cone">
        				<material>
        					<color>1 0.9 0.4</color>
        				</material>
        			</object>
        		</transform>
        	</group>
        </group>
    </transform>
</scene>